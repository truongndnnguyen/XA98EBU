<div id=leaflet-popup-styling>
    <div class="panel panel-default osom-panel-map-marker">
        <div class="panel-body osom-popup-incident-subheader" >
            <div class="subheader-icon-style">
                {{icon classification.iconClass}}
            </div>
            <div class="subheader-incident-p-style">
                <span class="subheader-title-style"><strong>{{classification.headline}}</strong></span>
                <br />
                {{classification.location}}
            </div>
        </div>
        <div class="panel-body osom-popup-body">
            <div id="osom-popup-content">
                <table id="popup-table-style">
                    {{#if properties.webHeadline}}
                    <tr>
                        <td colspan="2">{{properties.webHeadline}}</td>
                    </tr>
                    {{/if}}
                    {{#if properties.magnitude}}
                    <tr>
                        <th><strong><i class="fa fa-area-chart" aria-hidden="true"></i><span class="sr-only">Magnitude</span></strong> </th>
                        <td>Magnitude {{roundFloat properties.magnitude}}</td>
                    </tr>
                    {{/if}}
                    <tr>
                        <th><strong><i class="fa fa-arrow-right" aria-hidden="true"></i><span class="sr-only">Current status</span></strong> </th>
                        <td>{{properties.status}}</td>
                    </tr>
                    <tr>
                        <th><strong><i class="fa fa-clock-o" aria-hidden="true"></i> <span class="sr-only">Last updated</span></strong> </th>
                        <td>{{timeLocal classification.updatedTime}}</td>
                    </tr>
                    {{#if classification.vehicles}}
                    <tr>
                        <th><strong><i class="fa fa-bus" aria-hidden="true"></i><span class="sr-only">Vehicles responding</span></strong> </th>
                        <td>{{sizeColumn '' classification.vehicles}}</td>
                    </tr>
                    {{/if}}
                    {{#if properties.sizeFmt}}
                    <tr>
                        <th><strong><i class="fa fa-area-chart" aria-hidden="true"></i><span class="sr-only">Size</span></strong> </th>
                        <td>{{properties.sizeFmt}}</td>
                    </tr>
                    {{/if}}
                </table>
            </div>
        </div>
        <div class="panel-footer">
            <a href="#" class="no-url-change osom-popup-zoom text-uppercase"><img class="right-margin icon-controls-zoom_20x20" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"/>ZOOM</a>
            <div class="pull-right">
                {{#if classification.moreInformation}}
                    {{#if classification.majorIncidentLink}}
                        <a href="{{classification.majorIncidentLink}}" class="osom-popup-major-link text-uppercase">INFO<img class="left-margin icon-media-info_icon" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"/></a>
                    {{else}}
                        {{#if classification.moreInformationURL}}
                        <a target="_blank" href="{{classification.moreInformationURL}}" class="text-uppercase" target="_blank">LINK <img class="left-margin icon-controls-external_link_20x20" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"/></a>
                        {{else}}
                        <a href="#" class="no-url-change text-uppercase" id="osom-popup-details">INFO<img class="left-margin icon-media-info_icon" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"/></a>
                        {{/if}}
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</div>
